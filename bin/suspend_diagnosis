#!/usr/bin/env python3
"""
Main entry point for the Android Suspend Diagnosis Tool.

This script provides the main command-line interface for the tool.
"""
import sys
import os

# Add the src directory to the Python path so we can import the package
script_dir = os.path.dirname(os.path.abspath(__file__))
src_dir = os.path.join(os.path.dirname(script_dir), 'src')
sys.path.insert(0, src_dir)

from suspend_diagnosis.main import main
from suspend_diagnosis.cli import build_parser


if __name__ == "__main__":
    parser = build_parser()
    args = parser.parse_args()
    main(args)
